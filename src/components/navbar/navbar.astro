---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Eventos",
    path: "#",
    children: [
      { title: "Cumbre de Lideres 2023", path: "/" },
      { title: "Hist√≥rico 2023", path: "#" },
      { title: "M.I.N.U. RIO IV 2023", path: "#" },
      { title: "MINU 2023", path: "/404" },
    ],
  },
  {
    title: "Sumate",
    path: "/pricing",
  },
  {
    title: "Nosotros",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contactanos",
    path: "/contact",
  },
];
---

<Container class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 bg-violet ">
  <header class="flex flex-col lg:flex-row justify-between items-center py-3">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/"
          > <img src="src/assets/AILE/AILEblanco@4x-8.png" alt="LogoAILE" width="70px">
        </a>
        <div class="block lg:hidden">
          <MenuIcon />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 text-white">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-white hover:text-white-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" style="muted" block size="md">Log in</Link>
          <Link href="#" size="md" block>Sign up</Link>
        </div>
      </MenuItems>
    </Astronav>
  </header>
</Container>
